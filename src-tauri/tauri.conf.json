{
    "$schema": "https://raw.githubusercontent.com/nicegui/tauri/main/tooling/cli/schema.json",
    "productName": "StickyNotes",
    "version": "1.0.0",
    "identifier": "com.stickynotes.app",
    "build": {
        "frontendDist": "../dist",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "manager",
                "title": "StickyNotes â€” Manager",
                "url": "index.html",
                "width": 380,
                "height": 800,
                "resizable": false,
                "decorations": false,
                "transparent": true,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}